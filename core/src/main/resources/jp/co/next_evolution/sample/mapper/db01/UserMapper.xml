<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 4.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.next_evolution.sample.mapper.db01.UserMapper">

    <select id="login" resultType="jp.co.next_evolution.sample.dto.LoginUser">
        SELECT
             user_id           AS userId
            ,email_address     AS emailAddress
            ,user_name         AS userName
        FROM user
        WHERE
            email_address      = #{emailAddress}
            AND login_password = #{loginPassword}
    </select>

</mapper>
